{
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "module": "ES6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "js",
  },
  "include": ["src/main.ts"],
  "exclude": ["node_modules"]
}
